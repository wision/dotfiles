Config {
      font = "xft:Bitstream Vera Sans Mono:size=9:normal:antialias=true"
    , bgColor = "black"
    , fgColor = "grey"
    , position = Top
    , lowerOnStart = True
    , alignSep = "}{"
    , sepChar = "%"
    , commands = [
          Run StdinReader
        , Run Cpu ["-L","30","-H","60","-h","#FFB6B0","-l","#CEFFAC","-n","#FFFFCC","-w","3"] 10
        , Run CoreTemp       [ "--template" , "<core4>Â°C"
                             , "--Low"      , "70"
                             , "--High"     , "80"
                             , "--low"      , "lightgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 50
        , Run CpuFreq        [ "--template" , "<cpu4>"
                             ,"-L", "800"
                             , "-H", "2"
                             , "-l", "lightblue"
                             , "-n","white"
                             , "-h", "red"] 10
        , Run Memory         [ "--template" ,"Mem: <usedratio>%"
                             , "--Low"      , "70"
                             , "--High"     , "90"
                             , "--low"      , "lightgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 10
        , Run Swap           [ "--template" ,"Swap: <usedratio>%"
                             , "--Low"      , "30"
                             , "--High"     , "80"
                             , "--low"      , "lightgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 10
--        , Run Network "enp0s31f6" ["-t","<rx> / <tx>","-H","200","-L","10","-h","#FFB6B0","-l","#CEFFAC","-n","#FFFFCC"] 10
--        , Run Network "wlp61s0" ["-t","<rx> / <tx>","-H","200","-L","10","-h","#FFB6B0","-l","#CEFFAC","-n","#FFFFCC"] 10
        , Run DynNetwork     [ "--template" , "<dev>: <tx> / <rx>"
                             , "--Low"      , "50000"
                             , "--High"     , "1000000"
                             , "--low"      , "lightgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 10
        , Run Wireless "wlp61s0" ["-t","ssid: <fc=darkgreen><essid></fc>"] 10
        , Run Battery        [ "--template" , "Battery: <acstatus>"
                             , "--Low"      , "10"
                             , "--High"     , "80"
                             , "--low"      , "darkred"
                             , "--normal"   , "darkorange"
                             , "--high"     , "lightgreen"
                             , "--", "-o" , "<left>% (<timeleft>)"
                             , "-O" , "<left>% (<fc=#dAA520>Charging</fc>)"
                             , "-i" , "<left>% (<fc=#006000>Charged</fc>)"
                             ] 50
        , Run Date "%F %a %H:%M:%S" "date" 10
        , Run Com "uname" ["-s","-r"] "" 36000
    ]

    , template = "%StdinReader% }{ %cpu% - %coretemp% - %cpufreq% | %memory% - %swap% | %dynnetwork% | %wlp61s0wi%                              %battery% | <fc=#ee9a00>%date%</fc> | %uname%"
}
